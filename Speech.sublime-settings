/*
    Speech default settings
*/
{
    /*
        Sets the mode in which speech recognizer begins at startup

        true - Turned on and ready to run
        false - Turned off. You must manually turn it back on after this.
        "sleep" - Sleeping. In sleep mode the recognizer still runs but doesn't
                  respond to any other commands than "wake up" or "turn off".
    */
    "startup": true
}
